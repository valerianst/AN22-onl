fun main() {
    println ("Введите число")
    val number = readln()
    if (isPalindromeString(number)) {
        println("$number - палиндром")
    } else {
        println("$number - не палиндром")
    }

    }
fun isPalindromeString(str: String): Boolean {
    val cleanStr = str.replace("\\s".toRegex(), "")
    return cleanStr == cleanStr.reversed()
}
